<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bloom Filter Username Check</title>
  <link href="/output.css" rel="stylesheet">
  <script src="/script.js" defer></script>
</head>

<body class="bg-gray-100 font-sans leading-normal tracking-normal">

  <!-- Main Container -->
  <div class="container mx-auto mt-10 p-8 bg-white shadow-lg rounded-lg">

    <!-- Header Section -->
    <h1 class="text-4xl font-bold text-center mb-8 text-blue-600">Register a New User</h1>

    <div class="flex flex-col md:flex-row justify-between items-start">

      <!-- Registration Form -->
      <div class="w-full md:w-1/2 bg-white p-6 rounded-lg shadow-lg mb-6 md:mb-0">
        <form id="registration-form" class="space-y-6">
          <div>
            <label for="username" class="block text-lg font-medium text-gray-700">Username:</label>
            <input type="text" id="username" name="username"
              class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent outline-none transition duration-150 ease-in-out">
            <p id="username-status" class="mt-2 text-sm"></p>
          </div>

          <div>
            <label for="password" class="block text-lg font-medium text-gray-700">Password:</label>
            <input type="password" id="password" name="password"
              class="w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent outline-none transition duration-150 ease-in-out">
          </div>

          <button type="submit"
            class="w-full bg-blue-500 hover:bg-blue-600 text-white text-lg font-bold py-3 rounded-lg focus:outline-none transition duration-150 ease-in-out">
            Register
          </button>
        </form>
      </div>

      <!-- Registered Users List -->
      <div class="w-full md:w-1/2 bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-blue-600 mb-4">Registered Users</h2>
        <ul id="user-list" class="list-disc pl-5 space-y-2 text-gray-700">
          <% users.forEach(function(user) { %>
            <li>
              <%= user %>
            </li>
            <% }) %>
        </ul>
      </div>
    </div>

  </div>

</body>

</html>